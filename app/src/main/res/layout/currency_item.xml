<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:fontFamily="@font/anonymous_pro"
        android:id="@+id/textView"
        android:layout_width="10dp"
        android:layout_height="30dp"
        android:layout_marginStart="0dp"
        android:background="@color/colorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:fontFamily="@font/anonymous_pro"
        android:textColor="@drawable/text_style"
        android:id="@+id/currencyShortName"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:text="BTC"
        android:textAllCaps="true"
        app:layout_constraintBaseline_toBaselineOf="@+id/currencyRate"
        app:layout_constraintStart_toEndOf="@+id/textView"/>

    <TextView
        android:id="@+id/currencyRate"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:height="6dp"
        android:background="@drawable/background_style"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/currencyShortName"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.523"/>


</android.support.constraint.ConstraintLayout>